{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/action/*": ["action/*"],
      "@/components/*": ["components/*"],
      "@/layouts/*": ["layouts/*"],
      "@/lib/*": ["lib/*"],
      "@/app/*": ["app/*"],
      "@/public/*": ["public/*"],
      "@/assets/*": ["assets/*"],
      "@/constants/*": ["constants/*"],
      "@/types/*": ["types/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    ".prettierrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    "**/*.json",
    ".next/types/**/*.ts",
    ".contentlayer/generated/**/*.json",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules",
    "public/search.json",
    ".contentlayer/generated/Post/*"
  ]
}
